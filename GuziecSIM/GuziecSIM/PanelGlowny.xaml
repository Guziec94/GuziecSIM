        <Label x:Name="infoKonf" Content="" HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top" FontFamily="Segoe UI Black" Foreground="#FFA7CF76" RenderTransformOrigin="0.381,0.538" Width="189"/>
